<resources>

    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- Base application theme. -->
    <style name="AppBaseTheme" parent="android:Theme.Light">
        <!-- Customize your theme here. -->
    </style>

    <style name="MyAppTheme" parent="AppBaseTheme">
        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
    </style>

    <style name="Theme.picker" parent="android:Theme.Holo.Light">
        <item name="android:editTextStyle">@style/Widget.EditText.White</item>
    </style>

    <style name="Widget.EditText.White" parent="@android:style/Widget.EditText">
        <item name="android:textColor">@color/setting_text_dark</item>
    </style>

    <style name="title_text_style">
        <item name="android:textColor">@color/title_text</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="btn_style">
        <item name="android:background">@color/title_text</item>
        <item name="android:textColor">@color/main_bg</item>
        <item name="android:textSize">@dimen/text_btn</item>
    </style>

</resources>
